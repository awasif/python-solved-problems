import random

# Step 1: Word list
words = ["python", "hangman", "apple", "developer", "loop"]
word = random.choice(words)

# Step 2: Game variables
guessed_letters = []
tries = 6
display = ["_" for _ in word]

# Step 3: Game loop
while tries > 0 and "_" in display:
    print("\nWord:", " ".join(display))
    guess = input("Guess a letter: ").lower()

    if not guess.isalpha() or len(guess) != 1:
        print("âš ï¸ Enter only a single alphabet.")
        continue

    if guess in guessed_letters:
        print("ğŸ” You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in word:
        print("âœ… Correct guess!")
        for i in range(len(word)):
            if word[i] == guess:
                display[i] = guess
    else:
        print("âŒ Wrong guess.")
        tries -= 1
        print("Tries left:", tries)

# Step 4: End game
if "_" not in display:
    print("\nğŸ‰ You won! The word was:", word)
else:
    print("\nğŸ’€ You lost! The word was:", word)
